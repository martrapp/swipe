---
interface Props {
  title?: string;
}
const { title }: Props = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link type="expect" href="#body" blocking="render" />
    <title>{title}</title>
    <style is:global>
      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body id="body">
    <slot />
  </body>
</html>
